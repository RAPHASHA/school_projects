<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.passenger.application.Apply3rd"
    android:background="@color/colorPrimary"
    android:padding="30dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/apply_back_stage3_button_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/arrow_back"
            android:transitionName="transition_back_btn"/>

        <TextView
            android:id="@+id/apply_stage3_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APPLY FOR OUR SERVICES"
            android:textColor="@color/colorBlack"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:transitionName="transition_stag1_txt">
        </TextView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Gender"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>


            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Birth Date"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply_next_stage3_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:background="@color/colorBlack"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:elevation="10dp"
            android:transitionName="transition_next_btn"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply_login_stage3_button_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:background="#00000000"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:transitionName="transition_login_btn"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.core.widget.NestedScrollView>