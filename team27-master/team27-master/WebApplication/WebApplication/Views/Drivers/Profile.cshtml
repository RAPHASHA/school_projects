@model WebApplication.Models.Driver

@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/images/user1.jpg"
                                 alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center"> @Html.DisplayFor(model => model.Name)  @Html.DisplayFor(model => model.Surname)</h3>
                        <p class="text-muted text-center">Driver @Model.id </p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Trips Completed</b> <a class="float-right">0</a>
                            </li>
                            <li class="list-group-item">
                                <b>Vehicle ID</b> <a class="float-right">@Model.VehicleID</a>
                            </li>
                            <li class="list-group-item">
                                <b>Ratings</b> <a class="float-right">Not rated</a>
                            </li>
                        </ul>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" style="width:180px" value="MORE" class="btn btn-primary" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">PASSENGER</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="btn btn-primary" href="#update" data-toggle="tab">Activity</a></li>
                            @if (Model.HasVehicle == 0)
                            {

                                <li class="nav-item"><a asp-action="NoVehicleFound" asp-route-id="@Model.id" class="nav-link">Vehicle</a></li>
                            }
                            @if (Model.HasVehicle == 1)
                            {
                                <li class="nav-item"><a asp-action="Vehicle" asp-route-id="@Model.id" class="nav-link">Vehicle</a></li>

                            }
                                
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">DRIVER #@Model.id</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>

                                                <div class="row" style="position:relative; left:30px;">
                                                    <div class="col-12">
                                                        <div class="post">
                                                            <div class="user-block">
                                                                <img class="img-circle img-bordered-sm" src="~/images/user1.jpg" alt="user image">
                                                                <span class="username">
                                                                    <a href="#">@Model.Name @Model.Surname</a>
                                                                </span>
                                                                <span class="description">Worker Passenger</span>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="position:relative; left:30px;" >
                                                    <div class="col-12 col-sm-4">
                                                       
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Name </span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Name @Model.Surname</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                        
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Email</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Email</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                       
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Cell</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Email</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="position:relative; left:30px;">
                                                    <div class="col-12 col-sm-4">
                                                        
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Gender </span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Gender</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                    
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Type</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.DriverType</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                        
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Account Active</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.AccountActive</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>

                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post" style="position:relative; top:-20px;">
                                                       
                                                            <form asp-action="Edit">
                                                                <a asp-action="Delete" asp-route-id="@Model.id" class="btn btn-primary">
                                                                    <i class="fas fa-user"></i>Remove
                                                                </a>
                                                                <a asp-action="List" class="btn btn-dark">
                                                                    <i class="fas fa-user"></i>Back
                                                                </a>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


