@model WebApplication.Models.Driver

@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="~/images/car2.png"
                                 alt="User profile picture">
                        </div>
                        <h3 class="profile-username text-center"> @Html.DisplayFor(model => model.VehicleName)</h3>
                        <p class="text-muted text-center">Vehicle @Model.VehicleID </p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Trips Completed</b> <a class="float-right">204</a>
                            </li>
                            <li class="list-group-item">
                                <b>Amount Due</b> <a class="float-right">R543.00</a>
                            </li>
                            <li class="list-group-item">
                                <b>Ratings</b> <a class="float-right">3/10 Stars</a>
                            </li>
                        </ul>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="id" />
                            <input type="submit" style="width:180px" value="UPDATE" class="btn btn-primary" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">PASSENGER</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link" asp-action="Profile"asp-route-id="@Model.id">Activity</a></li>
                            <li class="nav-item"><a asp-action="NoVehicleFound" asp-route-id="id" class="btn btn-primary">Vehicle</a></li>
                            <li class="nav-item"><a class="nav-link">Reports</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">DRIVER #@Model.id</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>
                                               
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post">
                                                            <div class="user-block">
                                                                <img class="img-circle img-bordered-sm" src="~/images/car2.png" alt="user image">
                                                                <span class="username">
                                                                    <a href="#">Vehicle Details</a>
                                                                </span>
                                                                <span class="description">@Model.VehicleName</span>
                                                            </div>
                                                            <!-- /.user-block -->
                                                            <div class="row" style="position:center">
                                                                <div class="col-4">
                                                                    <h5 class="headline">Vehicle Name</h5>
                                                                    <span class="description">@Model.VehicleName</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">Vehicle Type</h5>
                                                                    <span class="description">@Model.VehicleType</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">DateAdded</h5>
                                                                    <span class="description">@Model.VehicleDateAdded</span>
                                                                </div>
                                                            </div>
                                                       
                                                            <div class="row">
                                                                <div class="col-4">
                                                                    <br/>
                                                                    <h5 class="headline">Vehicle Capacity</h5>
                                                                    <span class="description">@Model.VehicleCapacity Seats</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <br />
                                                                    <h5 class="headline">State Description</h5>
                                                                    <span class="description">@Model.VehicleStateDescription</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <br />
                                                                    <h5 class="headline">VehicleRegistration</h5>
                                                                    <span class="description">@Model.VehicleName</span>
                                                                </div>

                                                            </div>
                                                            </br>
                                                            </br>
                                                            <form asp-action="Edit">
                                                                <a asp-action="Profile" asp-route-id="@Model.id" class="btn btn-dark">
                                                                    <i class="fas fa-user"></i>Back
                                                                </a>
                                                                <a asp-action="RemoveVehicle" asp-route-id="@Model.id" class="btn btn-danger">
                                                                    <i class="fas fa-user"></i>Unassign
                                                                </a>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


