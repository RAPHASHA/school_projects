@model WebApplication.Models.Driver

@{
    ViewData["Title"] = "Unassign Vehicle";
}

<h1>@ViewData["Title"]</h1>
<h3>Do you want to remove The vehicle assigned to Mr @Model.Name @Model.Surname ?</h3>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<form role="form" asp-action="RemoveVehicle">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm-12">
            <!-- select -->
            <dl class="row">
                <dt class="col-sm-2">
                    Vehicle Name
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VehicleName)
                </dd>

                <dt class="col-sm-2">
                    Vehicle Type
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.VehicleType)
                </dd>
            </dl>
        </div>
    </div>
    <input type="submit" value="Confirm" asp-route-id="@Model.id" class="btn btn-success" />
    <a asp-action="Vehicle" asp-route-id="@Model.id" class="btn btn-dark">Cancel</a>
</form>
<div>
    <hr />
</div>

