@model WebApplication.Models.MultipleData


@{
    ViewData["Title"] = "Applications";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
            }</script>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">

                        <img class="mylogo" style="width:150px !important"
                             src="~/images/logos.jpg">


                        <h3 class="profile-username text-center">TAXI-CLUB</h3>
                        <p class="text-muted text-center">Admin</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>TaxiClub Email</b> </br> <p>TaxiClub@gmail.com</p>
                            </li>
                            <li class="list-group-item">
                                <b>TaxiClub Phone-Number</b> </br><p>(011)-053-4535</p>
                            </li>
                            <li class="list-group-item">
                                <b>TaxiClub Fax </b> </br> <p>(011)-053-4535</p>
                            </li>
                        </ul>
                        <form asp-action="Delete">
                            <input type="submit" style="width:180px" value="UPDATE" class="btn btn-primary" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">PASSENGER</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">

                            <li class="nav-item"><a class="btn btn-primary" asp-action="List">List</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Reports</a></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->

                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">ACCEPT APPLICATION</h3>
                                    </div>
                                    <!-- /.card-header -->

                                    <div class="card-body">
                                        <form role="form" asp-action="Accept">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="row">
                                                <div class="col-sm-3" style="position:relative; left:20px;">
                                                    <!-- select -->
                                                    <div class="form-group">
                                                        <div class="form-group">


                                                            <label asp-for="@Model.Request.DriverName" class="control-lable"></label>
                                                               @{ var drivers = Model.Drivers;
                                                                @Html.DropDownListFor(model => model.DriverName, new SelectList(Model.Drivers, "Name","Name"), "Select") }
                                                            <span asp-validation-for="@Model.Request.DriverName" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="col-sm-5">
                                                    <!-- select -->
                                                    <div class="form-group">
                                                        <label>Vehicile Registration</label>
                                                        @{ var vehicles = Model.Vehicles;
                                                            @Html.DropDownListFor(model => model.VehicleName, new SelectList(Model.Vehicles, "Name", "Name"), "Select") }
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="card-body">
                                                        <div class="form-group">
                                                            <input class="form-control" asp-for="@Model.Request.PassengerEmail" placeholder="To:  @Model.Request.PassengerEmail">
                                                        </div>
                                                        <div class="form-group">
                                                            <input class="form-control" placeholder="Subject: Request Approved">
                                                        </div>
                                                        <div class="form-group">
                                                            <textarea class="form-control" style="height: 250px">
Dear Mr @Model.Request.PassengerName  @Model.Request.PassengerSurname

We are Pleased to inform you that we will be commuting your learners to (@Model.Request.DropOffLocation) on the (@Model.Request.TripDate), We will be picking you up in a bus to accommidate your @Model.Request.NumberPassenger  learners you can navigate to my trips in your mobile app account to see your driver and the assigned vehicle details.

Thank you for choosing TaxClub.
                                                         </textarea>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="row">
                                                <div class="col-sm-3">
                                                    <!-- text input -->
                                                    <div class="form-group">
                                                        <label class="control-lable">Actions</label>
                                                        <br />
                                                        <input type="submit" value="Confirm" class="btn btn-success" />
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- Post -->
                                <!-- /.post -->
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->

                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>



