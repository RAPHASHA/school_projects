@model WebApplication.Models.Passenger

@{
    ViewData["Title"] = "Profile";
}
    <link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            @if (@Model.Gender.Equals("Male"))
                            {
                                

                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/images/user1.jpg"
                                     alt="User profile picture">

                            }
                            @if (@Model.Gender.Equals("Female"))
                            {

                              

                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/images/user3-128x128.jpg"
                                     alt="User profile picture">
                            }
                            @if (@Model.Gender.Equals("Other"))
                            {

                                

                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/images/user2-160x160.jpg"
                                     alt="User profile picture">
                            }
                      
                        </div>
                        <h3 class="profile-username text-center"> @Html.DisplayFor(model => model.Name)  @Html.DisplayFor(model => model.Surname)</h3>
                        <p class="text-muted text-center">Passenger @Model.id </p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Trips Completed</b> <a class="float-right">0</a>
                            </li>
                            <li class="list-group-item">
                                <b>Amount Due</b> <a class="float-right">R00:00</a>
                            </li>
                            <li class="list-group-item">
                                <b>Ratings</b> <a class="float-right">3/0 Stars</a>
                            </li>
                        </ul>
                        <form asp-action="Delete" >
                            <input type="hidden" asp-for="id" />
                            <input type="submit"style="width:180px" value="UPDATE" class="btn btn-success" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Passenger</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#update" data-toggle="tab">Activity</a></li>
                            @if (Model.Assigned==0)
                            {

                                <li class="nav-item"><a asp-action="TripNotFound" asp-route-id="@Model.id"  class="nav-link">Trip</a></li>
                            }
                            @if (Model.Assigned==1)
                            {

                                <li class="nav-item"><a asp-action="Trip" asp-route-id="@Model.id" class="nav-link">Trip</a></li>
                            }
                            <li class="nav-item"><a class="nav-link" href="#update" data-toggle="tab">Reports</a></li>
                        </ul> 
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">PASSENGER #@Model.id</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>

                                               

                                                <div class="row">
                                                    <div class="user-block">
                                                        <img class="img-circle img-bordered-sm" src="~/images/user1.jpg" alt="user image">
                                                        <span class="username">
                                                            <a href="#">@Model.Name @Model.Surname</a>
                                                        </span>
                                                        <span class="description">Worker Passenger</span>
                                                    </div>
                                                    <br />
                                                    <div class="col-12">
                                                        <div class="post">

                                                            <!-- /.user-block -->
                                                            <div class="row" style="position:relative; left:0px;">
                                                                <div class="col-4">
                                                                    <br />
                                                                    <h5 class="headline">Full Name</h5>
                                                                    <span class="description">@Model.Name @Model.Surname</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <br />
                                                                    <h5 class="headline">Gender</h5>
                                                                    <span class="description">@Model.Gender</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <br />
                                                                    <h5 class="headline">Age</h5>
                                                                    <span class="description">34 years old</span>
                                                                </div>
                                                            </div>
                                                            </br>
                                                            </br>
                                                            <div class="row" style="position:relative; left:0px;">
                                                                <div class="col-4">
                                                                   
                                                                    <h5 class="headline">Home Address</h5>
                                                                    <span class="description">@Model.HomeAddress</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">Email</h5>
                                                                    <span class="description">@Model.Email</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">Cell</h5>
                                                                    <span class="description">@Model.Cell</span>
                                                                </div>
                                                            </div>
                                                            </br>
                                                            </br>
                                                            <div class="row" style="position:relative; left:0px;">
                                                                <div class="col-4">
                                                                    
                                                                    <h5 class="headline">Usertype</h5>
                                                                    <span class="description">Passeneger</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">Passenger type</h5>
                                                                    <span class="description">Worker</span>
                                                                </div>
                                                                <div class="col-4">
                                                                    <h5 class="headline">Date Added</h5>
                                                                    <span class="description">@Model.BirthDate</span>
                                                                </div>
                                                            </div>
                                                            </br>
                                                            </br>
                                                            <form asp-action="Edit">
                                                                <a asp-action="Edit" asp-route-id="@Model.id" class="btn btn-danger">
                                                                    <i class="fas fa-user"></i>Update
                                                                </a>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>
        
                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


