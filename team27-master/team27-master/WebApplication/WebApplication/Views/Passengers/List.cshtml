@model IEnumerable<WebApplication.Models.Passenger>


@{
    ViewData["Title"] = "Passengers";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">

                        <img class="mylogo" style="width:150px !important"
                             src="~/images/logos.jpg">


                        <h3 class="profile-username text-center">TAXI-CLUB</h3>
                        <p class="text-muted text-center">Admin</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>TaxiClub Email</b> </br> <p>TaxiClub@gmail.com</p>
                            </li>
                            <li class="list-group-item">
                                <b>TaxiClub Phone-Number</b> </br><p>(011)-053-4535</p>
                            </li>
                            <li class="list-group-item">
                                <b>TaxiClub Fax </b> </br> <p>(011)-053-4535</p>
                            </li>
                        </ul>
                        <form asp-action="Delete">
                            <input type="submit" style="width:180px" value="UPDATE" class="btn btn-primary" />
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">PASSENGER</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <strong><i class="fas fa-book mr-1"></i> detail submitted</strong>

                        <p class="text-muted">
                            Documents recieved
                        </p>
                        <hr>
                        <strong><i class="fas fa-map-marker-alt mr-1"></i> Location</strong>
                        <p class="text-muted">Johanesburg</p>
                        <hr>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            
                            <li class="nav-item"><a class="btn btn-primary" asp-action="List">Activity</a></li>
                            
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">

                                <!-- Post -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">LIST</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post">
                                                            <div>
                                                                <div class="card-body p-0">
                                                                    <table class="table table-striped projects">
                                                                        <thead>
                                                                            <tr>
                                                                                <th style="width: 1%">
                                                                            
                                                                                </th>
                                                                                <th style="width: 20%">
                                                                                  
                                                                                </th>
                                                                                <th style="width: 3%">
                                                                                 
                                                                                </th>
                                                                                <th style="width: 8%" class="text-center">
                                                                                
                                                                                </th>
                                                                                <th style="width: 20%">
                                                                                </th>
                                                                            </tr>
                                                                        </thead>
                                                                        @foreach (var item in Model)
                                                                        {

                                                                            <div class="card bg-light">
                                                                                <div class="card-header text-muted border-bottom-0">
                                                                                    Activate Passenger
                                                                                </div>
                                                                                <div class="card-body pt-0">
                                                                                    <div class="row">
                                                                                        <div class="col-7">
                                                                                            <h2 class="lead"><b>@item.Name @item.Surname</b></h2>
                                                                                            <p class="text-muted text-sm"><b>About: </b> @item.Email / @item.Cell / @item.Gender </p>
                                                                                            <ul class="ml-4 mb-0 fa-ul text-muted">
                                                                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> Address: @item.HomeAddress</li>
                                                                                                <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Cell #@item.Cell</li>
                                                                                            </ul>
                                                                                        </div>
                                                                                        <div class="col-5 text-center">
                                                                                            @if (@item.Gender.Equals("Male"))
                                                                                            {
                                                                                                <img src="~/images/user1.jpg" alt="" class="img-circle img-fluid">
                                                                                            }
                                                                                            @if (@item.Gender.Equals("Female"))
                                                                                            {
                                                                                                <img src="~/images/user3-128x128.jpg" alt="" class="img-circle img-fluid">
                                                                                            }
                                                                                            @if (@item.Gender.Equals("Other"))
                                                                                            {
                                                                                                <img src="~/images/user2-160x160.jpg" alt="" class="img-circle img-fluid">
                                                                                            }

                                                                                        </div>
                                                                                    </div>
                                                                                </div>
                                                                                <div class="card-footer">
                                                                                    <div class="text-right">
                                                                                        <a href="#" class="btn btn-sm bg-teal">
                                                                                            <i class="fas fa-comments"></i>
                                                                                        </a>
                                                                                        <a  asp-action="Profile" asp-route-id="@item.id" class="btn btn-sm btn-primary">
                                                                                            <i class="fas fa-user"></i> View Profile
                                                                                        </a>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                          
                                                                        }
                                                                    </table>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>





