@model WebApplication.Models.Trip

@{
    ViewData["Title"] = "Trips";
}

<h1>@ViewData["Title"]</h1>

<script>
    function SelectDriverType() {
        var selec = document.getElementById("DriverTypeId");
        var dis = selec.options[selec.selectedIndex].text;
        document.getElementById("mytext").value = dis;
    }

    function SelectGender() {
        document.getElementsByName('radio1')
            .forEach(radio => {
                if (radio.checked) {
                    document.getElementById("inGender").value = radio.value;
                }
            });
    }</script>
<link href="~/TaxiClubStyles/TaxiClubStyleSheet.css" rel="stylesheet" />
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">

                <!-- Profile Image -->
                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <h3 class="profile-username text-center"> AREA #@Model.PickUpAreaID</h3>
                        <p class="text-muted text-center">@Model.PickUpArea</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Linked with</b> <a class="float-right">5 Trips</a>
                            </li>
                            <li class="list-group-item">
                                <b>Routes</b> <a class="float-right">5</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>


                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <h3 class="profile-username text-center"> AREA #@Model.DropOffAreaID</h3>
                        <p class="text-muted text-center">@Model.DropOffArea</p>
                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Linked with</b> <a class="float-right">5 Trips</a>
                            </li>
                            <li class="list-group-item">
                                <b>Routes</b> <a class="float-right">5</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Trip @Model.id</h3>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a asp-action="Details" asp-route-id="@Model.id" class="btn btn">Activity</a></li>
                            <li class="nav-item"><a asp-action="Driver" asp-route-id="@Model.id" class="btn btn-primary">Driver</a></li>
                            
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="update">
                                <!-- Post -->
                                <div class="card card-primary">
                                    <div class="card-header">
                                        <h3 class="card-title">TRIP @Model.id</h3>
                                    </div>
                                    <!-- /.card-header -->
                                    <div class="card-body" style="background-color:white">
                                        <div class="row">
                                            <div>

                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post">
                                                            <div class="user-block">
                                                                <img class="img-circle img-bordered-sm" src="~/images/user1.jpg" alt="user image">
                                                                <span class="username">
                                                                    <a href="#">@Model.Name @Model.Surname</a>
                                                                </span>
                                                                <span class="description">Worker Passenger</span>
                                                            </div>
                                                           
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row" style="position:relative; left:80px;">
                                                    <div class="col-12 col-sm-4">
                                                        <br/>
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Name </span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Name @Model.Surname</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                        <br />
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Email</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Email</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-12 col-sm-4">
                                                        <br />
                                                        <div class="info-box bg-light">
                                                            <div class="info-box-content">
                                                                <span class="info-box-text text-center text-muted">Driver Cell</span>
                                                                <span class="info-box-number text-center text-muted mb-0">@Model.Cell</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                             
                                                <div class="row">
                                                    <div class="col-12">
                                                        <div class="post">
    
                                                            <form asp-action="Assign">
                                                                <br />
                                                                <a asp-action="AssignNew" asp-route-id="@Model.id" class="btn btn-primary">Assign New</a>
                                                                <a asp-action="RemoveDriver" asp-route-id="@Model.id" class="btn btn-danger">Remove</a>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <!-- /.card-body -->
                                </div>
                                <!-- Post -->
                                <!-- /.post -->
                            </div>

                            <!-- /.tab-pane -->
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


